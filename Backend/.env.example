# Copy to .env and adjust. Required for backend to run.

# PostgreSQL (async driver). Required.
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/wishlist_ai

# Security (change in production)
SECRET_KEY=change-me-in-production

# CORS: development allows * so frontend (localhost:3000) can call API
APP_ENV=development
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Optional
DEBUG=true
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Pusher (real-time). Get from https://dashboard.pusher.com
# Put real values in .env (never commit .env)
PUSHER_APP_ID=your_app_id
PUSHER_KEY=your_key
PUSHER_SECRET=your_secret
PUSHER_CLUSTER=ap2
